# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
}

order += "arch_updates"
# order += "battery all"
order += "battery_level"
order += "disk /"
# order += "load"
# order += "memory"
order += "sysdata"
# order += "tztime local"
order += clock
order += "volume_status"

battery all {
        format = "%status %percentage %remaining"
}

battery_level {
    battery_id = "all"
    format_status_discharging = "ðŸ”‹"
    format_status_charging = "ðŸ”Œ"
    format_status_degraded = "ðŸª«"
    format_status_bad = "ðŸ’€"
    notify_low_level = true
    format = "{status} {percent}% {time_remaining}"
}

volume_status {
    cache_timeout = 1
    command = "pamixer"
}

arch_updates {
    # format = "updates: {total}"
    format = "ðŸ“¦ {total}"
}

disk "/" {
        format = "ðŸ’¾ %avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # color_good = "#00FF00"
        # format = "%T"
        format = "ðŸ“… %Y-%m-%d %H:%M"
}

sysdata {
    format = "ðŸŒ¡ {cpu_temp}{cpu_temp_unit}, ðŸ’» {cpu_used_percent}%, ðŸ {mem_used}{mem_used_unit} / {mem_total}{mem_total_unit}"
}

# Local doesn't work. The tzdata repo doesn't contain a file for local info and returns an error
clock {
    format = "{Local}"
    # format = "{UTC}"
    # format_time = "%Y%m%d %H:%M"
    format_time = "ðŸ“… %Y-%m-%d %H:%M"
}
